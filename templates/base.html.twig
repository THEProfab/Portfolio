<html>
    <head>
        <meta charset="UTF-8">

        {% block icon %}
            <link rel="shortcut icon" href="{{ asset('/assets/images/shortcut.jpg') }}"/>
        {% endblock %}

        <title>
            {{ title }}
        </title>

        {{ encore_entry_link_tags('app') }}

        {% block stylesheets %}
        {% endblock %}
    </head>

    <header>
        {% block header %}{% endblock %}
    </header>

    <body>
        {% block body %}{% endblock %}

        {{ encore_entry_script_tags('app') }}

        {% block javascripts %}
        {% endblock %}
    </body>

    <footer>
        {% block footer %}{% endblock %}
    </footer>
</html>
