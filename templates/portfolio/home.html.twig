{% extends 'base.html.twig' %}

{% set title = "Marc Bayart" %}

{% block header %}
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center text-white" id="intro">
                <h1 class="display-1" style="margin-top: 321px; margin-bottom: 321px;"> Marc Bayart </h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="my-4">
        <div class="container">
            <div class="row">
                <div class="col text-center text-secondary mt-5">
                    <h2> Qui suis-je ? </h2>
                    <hr class="my-4 bg-secondary">
                    <img height="150" class="rounded-lg mt-3" src="{{ asset('/assets/images/marc.png') }}" alt="Photo Marc">
                    <p class="mt-4 mb-5">
                        Étudiant en deuxième année de DUT (Diplôme Universitaire de Technologie)
                        informatique à Lens. Je suis particulièrement intéressé par le développement Java et PHP (Back-end).
                        Si vous voulez en savoir plus, utilisez les boutons ci-dessous !
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="my-5">
        <div class="container-fluid">
            <div class="row text-center">
                <div class="offset-1 col-sm-2">
                    <a class="btn btn-primary" data-toggle="collapse" href="#formation" role="button" aria-expanded="false" aria-controls="formation">
                        Formation
                    </a>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-primary" data-toggle="collapse" href="#exp" role="button" aria-expanded="false" aria-controls="expériences professionnelles">
                        Expériences professionnelles
                    </a>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-primary" data-toggle="collapse" href="#projets" role="button" aria-expanded="false" aria-controls="projets">
                        Projets
                    </a>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-primary" data-toggle="collapse" href="#qualites" role="button" aria-expanded="false" aria-controls="qualités">
                        Qualités
                    </a>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-primary" data-toggle="collapse" href="#loisirs" role="button" aria-expanded="false" aria-controls="loisirs">
                        Loisirs
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    <section class="bg-secondary">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 text-center text-white mt-5">
                    <h2 class="mt-4">Informations complémentaires</h2>
                    <hr class="my-4 bg-white">
                    <div class="row mb-5">
                        {% for i in infos %}
                            <div class="col-sm-4 my-3">
                                <i class="{{ i.icon.icon | raw }} fa-5x mb-2"></i>
                                <p>{{ i.description | raw }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}